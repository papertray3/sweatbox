{
  "name": "@sweatbox/server",
  "version": "0.1.0",
  "description": "Server for sweatbox app",
  "main": "./dist/server/app.js",
  "scripts": {
    "tsc": "tsc",
    "prebuild": "npm run genversion",
    "build": "tsc",
    "build:test": "npm run build",
    "prestart": "npm run build",
    "start": "NODE_ENV=development node ./dist/server/app.js --port 3000",
    "prestart:test": "npm run build:test",
    "start:test": "NODE_ENV=test node ./dist/server/app.js --port 3000 --rootDir ../client/dist/public",
    "clean": "rimraf dist/",
    "genversion": "genversion --es6 src/version.ts",
    "postinstall": "npm run genversion"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@papertray3/express-config": "git+ssh://git@github.com/papertray3/express-config.git",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.38",
    "@types/log4js": "^2.3.5",
    "@types/node": "^10.5.3",
    "genversion": "^2.1.0",
    "rimraf": "^2.6.2",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@sweatbox-core/common": "^0.1.0",
    "@types/nconf": "0.0.37",
    "@types/yargs": "^11.1.1",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "knuth-shuffle": "^1.0.8",
    "log4js": "^3.0.3",
    "rxjs": "^6.2.2"
  }
}
